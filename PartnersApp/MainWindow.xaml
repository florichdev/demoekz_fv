<Window x:Class="PartnersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление партнерами" Height="600" Width="1000" Background="#FF424242"
        WindowStartupLocation="CenterScreen">
    <DockPanel Background="#FF424242">
        <Menu DockPanel.Dock="Top" Margin="3,0,0,0" Background="#FF424242" Foreground="White">
            <MenuItem Header="Партнеры" HorizontalAlignment="Center">
                <MenuItem Header="Добавить" Click="AddPartner_Click"/>
                <MenuItem Header="Редактировать" Click="EditPartner_Click"/>
                <MenuItem Header="Удалить" Click="DeletePartner_Click"/>
                <MenuItem Header="История продаж" Click="ShowSales_Click"/>
                <MenuItem Header="Экспорт в CSV" Click="ExportToCsv_Click"/>
                <Separator/>
                <MenuItem Header="Сменить пользователя" Click="SwitchUser_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Background="#FF424242" Foreground="White" Height="25">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Text="{Binding CurrentTime}" />
            </StatusBarItem>
        </StatusBar>

        <Grid Background="#FF424242">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                <Button x:Name="AddButton" Content="Добавить партнера" Click="AddPartner_Click" Width="120" Margin="0,0,10,0" Background="#FFF7F7F7" Foreground="Black"/>
                <Button x:Name="EditButton" Content="Редактировать" Click="EditPartner_Click" Width="100" Margin="0,0,10,0" Background="#FFF7F7F7" Foreground="Black"/>
                <Button x:Name="DeleteButton" Content="Удалить" Click="DeletePartner_Click" Width="80" Margin="0,0,10,0" Background="#FFF7F7F7" Foreground="Black"/>
                <Button Content="История продаж" Click="ShowSales_Click" Width="120" Background="#FFF7F7F7" Foreground="Black"/>
                <Button Content="Экспорт CSV" Click="ExportToCsv_Click" Width="100" Margin="10,0,0,0" Background="#FFF7F7F7" Foreground="Black"/>
                <Button Content="Сменить пользователя" Click="SwitchUser_Click" Width="140" Margin="10,0,0,0" Background="#FFE0E0E0" Foreground="Black"/>
            </StackPanel>

            <DataGrid Grid.Row="1" x:Name="PartnersGrid" SelectionChanged="PartnersGrid_SelectionChanged" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding TypeName}" Width="*"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Директор" Binding="{Binding Director}" Width="*"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>